<!DOCTYPE html>
<html>
<head>
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/static/style.css">

    <style>
        body {
            background: radial-gradient(circle at top, #0c1a34, #000814);
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
            color: white;
            overflow-x: hidden;
        }

        .stars {
            position: fixed;
            inset: 0;
            background: url('/static/stars.png');
            background-size: cover;
            opacity: 0.4;
            z-index: -1;
            animation: drift 50s linear infinite;
        }

        @keyframes drift {
            from { transform: translateY(0); }
            to { transform: translateY(-2000px); }
        }

        .dashboard-title {
            text-align: center;
            font-size: 2.8rem;
            margin-top: 40px;
            color: #bfe6ff;
            text-shadow: 0 0 15px #66d1ff, 0 0 40px #2ab7ff;
            letter-spacing: 2px;
            animation: fadeDown 1.2s ease;
        }

        @keyframes fadeDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Main layout */
        .dashboard-container {
            width: 95%;
            max-width: 1200px;
            margin: 40px auto;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        /* Character Box */
        .character-box {
            background: rgba(255,255,255,0.08);
            padding: 25px;
            border-radius: 25px;
            text-align: center;
            box-shadow: 0 0 20px rgba(70,170,255,0.4);
            backdrop-filter: blur(6px);
            animation: float 6s ease-in-out infinite;
        }

        @keyframes float {
            0% { transform: translateY(0); }
            50% { transform: translateY(-14px); }
            100% { transform: translateY(0); }
        }

        .character-img {
            width: 180px;
            border-radius: 18px;
            margin-bottom: 16px;
            box-shadow: 0 0 25px rgba(255,255,255,0.25);
        }

        .character-name {
            font-size: 1.8rem;
            color: #ffd86b;
            text-shadow: 0 0 10px #ffbf39;
        }

        /* Stats Panel */
        .stats-box {
            background: rgba(255,255,255,0.08);
            padding: 25px;
            border-radius: 25px;
            box-shadow: 0 0 20px rgba(0,200,255,0.3);
            backdrop-filter: blur(6px);
        }

        .stat-line {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        /* XP Bar */
        .xp-bar {
            margin-top: 10px;
        }

        .xp-track {
            width: 100%;
            height: 16px;
            background: rgba(255,255,255,0.18);
            border-radius: 12px;
            overflow: hidden;
        }

        .xp-fill {
            height: 100%;
            background: linear-gradient(90deg, #4be3ff, #00aaff);
            width: {{ xp_percent }}%;
            transition: width 0.6s ease;
        }

        /* Buttons */
        .btn-galaxy {
            display: block;
            width: 80%;
            margin: 15px auto;
            padding: 12px;
            background: linear-gradient(135deg, #5cd6ff, #2ab7ff);
            color: black;
            text-align: center;
            font-weight: 700;
            border-radius: 14px;
            text-decoration: none;
            box-shadow: 0 0 15px #3ad1ff;
            transition: 0.3s;
        }

        .btn-galaxy:hover {
            transform: scale(1.07);
            box-shadow: 0 0 25px #80e4ff;
        }

        /* Missions */
        .mission-box {
            margin-top: 20px;
            background: rgba(255,255,255,0.08);
            padding: 20px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(255,255,255,0.1);
        }

        .mission-title {
            font-size: 1.7rem;
            margin-bottom: 12px;
            color: #8fe3ff;
            text-shadow: 0 0 10px #00c8ff;
        }

        .mission-item {
            margin-bottom: 10px;
            padding: 10px;
            border-left: 4px solid #5cd6ff;
        }

        /* Locked Characters */
        .locked-box {
            grid-column: span 2;
            background: rgba(255,255,255,0.08);
            padding: 25px;
            border-radius: 25px;
            margin-top: 20px;
            text-align: center;
            box-shadow: 0 0 20px rgba(255,220,120,0.2);
        }

        .locked-title {
            font-size: 1.9rem;
            margin-bottom: 15px;
            color: #ffe29c;
            text-shadow: 0 0 12px #ffc868;
        }

        .locked-list div {
            margin: 10px 0;
            font-size: 1.2rem;
            opacity: 0.8;
        }

    </style>
</head>

<body>

<div class="stars"></div>

<h1 class="dashboard-title">Your Learning Galaxy</h1>

<div class="dashboard-container">

    <!-- Character Section -->
    <div class="character-box">
        <img src="/static/characters/{{ character }}.png" class="character-img">
        <h2 class="character-name">{{ character.replace("_"," ").title() }}</h2>
    </div>

    <!-- Stats Section -->
    <div class="stats-box">
        <div class="stat-line">‚≠ê Level: {{ level }}</div>
        <div class="stat-line">üèÖ XP: {{ xp }} / {{ xp_to_next }}</div>

        <div class="xp-bar">
            <div class="xp-track">
                <div class="xp-fill"></div>
            </div>
        </div>

        <div class="stat-line">üí´ Tokens: {{ tokens }}</div>
        <div class="stat-line">üî• Streak: {{ streak }} days</div>

        <a href="/shop" class="btn-galaxy">üõí Galaxy Shop</a>
        <a href="/inventory" class="btn-galaxy">üéí Inventory</a>
        <a href="/subjects" class="btn-galaxy">ü™ê Explore Planets</a>
        <a href="/buddy" class="btn-galaxy">üí¨ Chat With Buddy</a>
    </div>

    <!-- Missions -->
    <div class="mission-box">
        <div class="mission-title">üî• Today's Missions</div>

        {% for mission in missions %}
        <div class="mission-item">{{ mission }}</div>
        {% endfor %}
    </div>

    <!-- Locked Characters -->
    <div class="locked-box">
        <div class="locked-title">üîí Unlockable Characters</div>

        <div class="locked-list">
            {% for c, req in locked_characters.items() %}
            <div>üö´ {{ c }} ‚Äî {{ req }}</div>
            {% endfor %}
        </div>
    </div>

</div>

</body>
</html>



